{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "aspen",
  "name": "Tenantum",
  "colors": {
    "primary": "#72D400",
    "light": "#72D400",
    "dark": "#72D400"
  },
  "favicon": "/favicon.svg",
  "mode": "light",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "icon": "book-open-cover",
        "groups": [
          {
            "group": "Getting Started",
            "pages": ["index", "onboarding", "quickstart"]
          },
          {
            "group": "Core Features",
            "pages": [
              "features/properties",
              "features/units",
              "features/tenants-leases",
              "features/income",
              "features/expenses",
              "features/maintenance",
              "features/reports",
              "features/leads"
            ]
          }
        ]
      },
      {
        "tab": "Reports",
        "icon": "chart-line",
        "groups": [
          {
            "group": "Basic Reports",
            "pages": ["reports/rent-roll", "reports/income-summary"]
          }
        ]
      },
      {
        "tab": "Support",
        "icon": "headset",
        "groups": [
          {
            "group": "Help",
            "pages": [
              "support/troubleshooting",
              "support/faq",
              "support/contact"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Home",
          "href": "https://tenantum.com",
          "icon": "house"
        },
        {
          "anchor": "Support",
          "href": "https://tenantum.com/support",
          "icon": "headset"
        },
        {
          "anchor": "Blog",
          "href": "https://tenantum.com/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Tenant Portal",
        "href": "https://tenantum.com/tenant-portal"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Landlord Dashboard",
      "href": "https://app.tenantum.com"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/tenantum",
      "github": "https://github.com/tenantum",
      "linkedin": "https://linkedin.com/company/tenantum"
    }
  }
}
