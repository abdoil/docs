{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "aspen",
  "name": "Tenantum",
  "colors": {
    "primary": "#72D400",
    "light": "#72D400",
    "dark": "#72D400",
    "background": "#ffffff",
    "text": "#374151",
    "textDark": "#374151"
  },
  "favicon": "/favicon.svg",
  "mode": "light",
  "themeToggle": false,
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting Started",
            "pages": ["index", "onboarding", "quickstart"]
          },
          {
            "group": "Core Features",
            "pages": [
              "features/properties",
              "features/units",
              "features/tenants-leases",
              "features/rent-payments"
            ]
          },
          {
            "group": "Maintenance",
            "pages": ["maintenance/requests", "maintenance/status-tracking"]
          },
          {
            "group": "Notifications",
            "pages": [
              "notifications/rent-reminders",
              "notifications/lease-expiry"
            ]
          }
        ]
      },
      {
        "tab": "Configuration",
        "groups": [
          {
            "group": "Settings",
            "pages": [
              "settings/account",
              "settings/payment",
              "settings/subscription"
            ]
          }
        ]
      },
      {
        "tab": "Reports",
        "groups": [
          {
            "group": "Basic Reports",
            "pages": ["reports/rent-roll", "reports/income-summary"]
          }
        ]
      },
      {
        "tab": "Support",
        "groups": [
          {
            "group": "Help",
            "pages": [
              "support/troubleshooting",
              "support/faq",
              "support/contact"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://tenantum.docs",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Community",
          "href": "https://community.tenantum.com",
          "icon": "slack"
        },
        {
          "anchor": "Blog",
          "href": "https://tenantum.blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/light.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@tenantum.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://app.tenantum.com"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/tenantum",
      "github": "https://github.com/tenantum",
      "linkedin": "https://linkedin.com/company/tenantum"
    }
  }
}
