{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "aspen",
  "name": "Tenantum",
  "description": "Tenantum is a powerful property management platform for landlords to manage properties, tenants, leases, and rent collection effortlessly.",
  "colors": {
    "primary": "#72D400",
    "light": "#72D400",
    "dark": "#72D400"
  },
  "favicon": "/favicon.svg",
  "mode": "light",
  "appearance": {
    "default": "light",
    "strict": true
  },
  "background": {
    "color": {
      "light": "#f1fbe6",
      "dark": "#f1fbe6"
    },
    "decoration": "window"
  },
  "seo": {
    "metatags": {
      "title": "Tenantum Documentation - Modern Property Management Platform",
      "description": "Learn how to use Tenantum, the all-in-one property management platform for landlords and property managers. Manage properties, tenants, leases, rent collection, payments, and tenant portals effortlessly.",
      "keywords": "property management, landlord software, tenant portal, rent collection, lease management, rental property software, Tenantum",
      "author": "Tenantum",
      "robots": "index, follow",
      "og:title": "Tenantum Documentation - Modern Property Management Platform",
      "og:description": "Tenantum helps landlords manage properties, tenants, leases, rent payments, and tenant portals from one dashboard.",
      "og:type": "website",
      "og:site_name": "Tenantum Documentation",
      "twitter:card": "summary_large_image",
      "twitter:title": "Tenantum Documentation - Modern Property Management Platform",
      "twitter:description": "Simplify property management with Tenantum: properties, tenants, leases, rent collection, and tenant portals in one platform."
    },
    "indexing": "all"
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "icon": "book-open-cover",
        "groups": [
          {
            "group": "Getting Started",
            "pages": ["index", "onboarding", "quickstart"]
          },
          {
            "group": "Core Features",
            "pages": [
              "features/properties",
              "features/units",
              "features/tenants-leases",
              "features/income",
              "features/expenses",
              "features/maintenance",
              "features/reports",
              "features/leads"
            ]
          }
        ]
      },
      {
        "tab": "Reports",
        "icon": "chart-line",
        "groups": [
          {
            "group": "Basic Reports",
            "pages": ["reports/rent-roll", "reports/income-summary"]
          }
        ]
      },
      {
        "tab": "Support",
        "icon": "headset",
        "groups": [
          {
            "group": "Help",
            "pages": [
              "support/troubleshooting",
              "support/faq",
              "support/contact"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Home",
          "href": "https://tenantum.com",
          "icon": "house"
        },
        {
          "anchor": "Support",
          "href": "https://tenantum.com/support",
          "icon": "headset"
        },
        {
          "anchor": "Changelog",
          "href": "https://tenantum.com/changelog",
          "icon": "file-pen"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Tenant Portal",
        "href": "https://tenantum.com/tenant-portal"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Landlord Dashboard",
      "href": "https://app.tenantum.com"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/tenantum",
      "github": "https://github.com/tenantum",
      "linkedin": "https://linkedin.com/company/tenantum"
    }
  }
}
